<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!--
        Adaptive icon: 108x108 total canvas, 72x72 safe zone centered (18dp inset).
        Safe zone spans from (18,18) to (90,90). Center is (54,54).
        All main content is within the safe zone.
    -->

    <!-- Heart shape: classic symmetric heart using cubic beziers -->
    <!-- Centered horizontally at x=54, spanning roughly y=36 to y=76 -->
    <path
        android:name="heart"
        android:fillColor="#EF5350"
        android:pathData="
            M54,76
            C54,76 32,60 32,46
            C32,38 38,32 46,32
            C50,32 54,36 54,36
            C54,36 58,32 62,32
            C70,32 76,38 76,46
            C76,60 54,76 54,76
            Z" />

    <!-- Jump rope: arc sweeping over the top of the heart -->
    <!-- Goes from handle-left up and over, then down to handle-right -->
    <path
        android:name="rope"
        android:pathData="M34,72 C34,62 38,40 54,26 C70,40 74,62 74,72"
        android:strokeColor="#42A5F5"
        android:strokeWidth="3"
        android:strokeLineCap="round"
        android:fillColor="#00000000" />

    <!-- Left handle: small rounded rectangle below the rope end -->
    <path
        android:name="handle_left"
        android:fillColor="#42A5F5"
        android:pathData="
            M31.5,71
            L36.5,71
            Q38,71 38,72.5
            L38,79.5
            Q38,81 36.5,81
            L31.5,81
            Q30,81 30,79.5
            L30,72.5
            Q30,71 31.5,71
            Z" />

    <!-- Right handle: small rounded rectangle below the rope end -->
    <path
        android:name="handle_right"
        android:fillColor="#42A5F5"
        android:pathData="
            M71.5,71
            L76.5,71
            Q78,71 78,72.5
            L78,79.5
            Q78,81 76.5,81
            L71.5,81
            Q70,81 70,79.5
            L70,72.5
            Q70,71 71.5,71
            Z" />

</vector>
